{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {  
        "storageCount": {
        "type": "int",
        "defaultValue": 3,
        "minValue": 1,
        "maxValue": 5,
        "metadata": {
          "description": "Copy Value for Storage Accounts"
        }
      }
    },
    "variables": {  
        "environment" : "Production",
        "ownership": "Sreeharsha"
    },
    "functions": [  ],
    "resources": [  
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "eastus",
            "name": "[concat('azureb15account00',copyIndex(55))]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "tags": {
                "Env": "[variables('environment')]",
                "Owner": "[variables('ownership')]"
            },
            "copy": {
                "name": "storagecopy",
                "count": "[parameters('storageCount')]"
            }
        }
    ],
    "outputs": {  }
}