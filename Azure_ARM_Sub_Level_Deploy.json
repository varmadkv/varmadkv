{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string",
            "defaultValue": "ENGAZUREB03SUBLEVEL"
        },
        "rgLocation": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "stgaccount1": {
            "type": "string",
            "defaultValue": "azureb12straccount1",
            "metadata": {
                "description": "Storage Account Name 1."
            }
        },
        "stgaccount2": {
            "type": "string",
            "defaultValue": "azureb12straccount2",
            "metadata": {
                "description": "Storage Account Name 1."
            }
        },
        "stgaccount3": {
            "type": "string",
            "defaultValue": "azureb12straccount3",
            "metadata": {
                "description": "Storage Account Name 1."
            }
        }
    },
    "variables": {
        "environment": "Production",
        "ownership": "Sreeharsha"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2020-06-01",
            "name": "[parameters('rgName')]",
            "location": "[parameters('rgLocation')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "storageDeployment",
            "resourceGroup": "[parameters('rgName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "location": "[parameters('rgLocation')]",
                            "name": "[parameters('stgaccount1')]",
                            "sku": {
                                "name": "Standard_LRS",
                                "tier": "Standard"
                            },
                            "kind": "StorageV2",
                            "tags": {
                                "Env": "[variables('environment')]",
                                "Owner": "[variables('ownership')]"
                            }
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "location": "[parameters('rgLocation')]",
                            "name": "[parameters('stgaccount2')]",
                            "sku": {
                                "name": "Standard_LRS",
                                "tier": "Standard"
                            },
                            "kind": "StorageV2",
                            "tags": {
                                "Env": "[variables('environment')]",
                                "Owner": "[variables('ownership')]"
                            }
                        },
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2019-06-01",
                            "location": "[parameters('rgLocation')]",
                            "name": "[parameters('stgaccount3')]",
                            "sku": {
                                "name": "Standard_LRS",
                                "tier": "Standard"
                            },
                            "kind": "StorageV2",
                            "tags": {
                                "Env": "[variables('environment')]",
                                "Owner": "[variables('ownership')]"
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}